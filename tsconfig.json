{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "useUnknownInCatchVariables": false,
    "strictNullChecks": true,
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "files": ["./src/global.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "lib": ["es2022", "esnext.decorators"]
}
